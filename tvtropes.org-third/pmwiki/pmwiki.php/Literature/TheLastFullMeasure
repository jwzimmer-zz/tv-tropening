<option value="/pmwiki/pmwiki.php/Recap/TheLastFullMeasure?action=edit">Recap</option>
<option value="/pmwiki/pmwiki.php/ReferencedBy/TheLastFullMeasure?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/TheLastFullMeasure?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/TheLastFullMeasure?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/TheLastFullMeasure?action=edit">Trivia</option>
<option value="/pmwiki/pmwiki.php/WMG/TheLastFullMeasure?action=edit">WMG</option>
<option value="/pmwiki/pmwiki.php/YMMV/TheLastFullMeasure?action=edit">YMMV</option>
</select>
</li>
</ul>
