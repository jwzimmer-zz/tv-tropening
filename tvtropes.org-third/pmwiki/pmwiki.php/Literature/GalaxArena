<option value="/pmwiki/pmwiki.php/Recap/GalaxArena?action=edit">Recap</option>
<option value="/pmwiki/pmwiki.php/ReferencedBy/GalaxArena?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/GalaxArena?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/GalaxArena?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/GalaxArena?action=edit">Trivia</option>
