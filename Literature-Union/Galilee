<option value="/pmwiki/pmwiki.php/ReferencedBy/Galilee?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/Galilee?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/Galilee?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/Galilee?action=edit">Trivia</option>
<option value="/pmwiki/pmwiki.php/WMG/Galilee?action=edit">WMG</option>
