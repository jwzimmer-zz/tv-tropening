<option value="/pmwiki/pmwiki.php/Recap/TheWitling?action=edit">Recap</option>
<option value="/pmwiki/pmwiki.php/ReferencedBy/TheWitling?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/TheWitling?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/TheWitling?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/TheWitling?action=edit">Trivia</option>
<option value="/pmwiki/pmwiki.php/WMG/TheWitling?action=edit">WMG</option>
<option value="/pmwiki/pmwiki.php/YMMV/TheWitling?action=edit">YMMV</option>
</select>
