<option value="/pmwiki/pmwiki.php/Recap/Flag?action=edit">Recap</option>
<option value="/pmwiki/pmwiki.php/ReferencedBy/Flag?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/Flag?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/Flag?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/Flag?action=edit">Trivia</option>
