<option value="/pmwiki/pmwiki.php/Synopsis/ShadowPin?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/ShadowPin?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/ShadowPin?action=edit">Trivia</option>
<option value="/pmwiki/pmwiki.php/WMG/ShadowPin?action=edit">WMG</option>
