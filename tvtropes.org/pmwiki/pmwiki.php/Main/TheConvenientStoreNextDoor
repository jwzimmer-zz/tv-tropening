<option value="/pmwiki/pmwiki.php/Quotes/TheConvenientStoreNextDoor?action=edit">Quotes</option>
<option value="/pmwiki/pmwiki.php/Recap/TheConvenientStoreNextDoor?action=edit">Recap</option>
<option value="/pmwiki/pmwiki.php/ReferencedBy/TheConvenientStoreNextDoor?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/TheConvenientStoreNextDoor?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/TheConvenientStoreNextDoor?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/TheConvenientStoreNextDoor?action=edit">Trivia</option>
