<option value="/pmwiki/pmwiki.php/Synopsis/LastConfessionWins?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/LastConfessionWins?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/LastConfessionWins?action=edit">Trivia</option>
<option value="/pmwiki/pmwiki.php/WMG/LastConfessionWins?action=edit">WMG</option>
<option value="/pmwiki/pmwiki.php/YMMV/LastConfessionWins?action=edit">YMMV</option>
</select>
</li>
</ul>
