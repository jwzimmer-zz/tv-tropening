<option value="/pmwiki/pmwiki.php/Recap/HairstyleMalfunction?action=edit">Recap</option>
<option value="/pmwiki/pmwiki.php/ReferencedBy/HairstyleMalfunction?action=edit">ReferencedBy</option>
<option value="/pmwiki/pmwiki.php/Synopsis/HairstyleMalfunction?action=edit">Synopsis</option>
<option value="/pmwiki/pmwiki.php/Timeline/HairstyleMalfunction?action=edit">Timeline</option>
<option value="/pmwiki/pmwiki.php/Trivia/HairstyleMalfunction?action=edit">Trivia</option>
<option value="/pmwiki/pmwiki.php/WMG/HairstyleMalfunction?action=edit">WMG</option>
<option value="/pmwiki/pmwiki.php/YMMV/HairstyleMalfunction?action=edit">YMMV</option>
</select>
</li>
</ul>
